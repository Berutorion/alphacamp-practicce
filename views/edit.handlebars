<h1 class="mb-1 restaurant-show-title">修改餐廳資料</h1>
<div class="container">
  <form action="/restaurants/{{rest._id}}?_method=PUT" method="POST">
    <div class="mb-3">
      <label for="name" class="form-label">店名</label>
      <input
        type="text"
        class="form-control"
        name="name"
        value="{{rest.name}}"
        minlength="3"
        required
      />
    </div>
    <div class="mb-3">
      <label for="name_en" class="form-label">英文店名</label>
      <input
        type="text"
        class="form-control"
        name="name_en"
        value="{{rest.name_en}}"
        minlength="3"
        required
      />
    </div>
    <div class="mb-3">
      <label for="category" class="form-label">店鋪種類</label>
      <input
        type="text"
        class="form-control"
        name="category"
        value="{{rest.category}}"
        list="categoryOptions"
      />
      <datalist id="categoryOptions">
        <option>美式</option>
        <option>咖啡</option>
        <option>中東料理</option>
        <option>日本料理</option>
        <option>義式餐廳</option>
      </datalist>
    </div>
    <div class="mb-3">
      <label for="image" class="form-label">店面圖片網址</label>
      <input
        type="text"
        class="form-control"
        name="image"
        value="{{rest.image}}"
      />
    </div>
    <div class="mb-3">
      <label for="location" class="form-label">店面地址</label>
      <input
        type="text"
        class="form-control"
        name="location"
        value="{{rest.location}}"
        minlength="3"
        required
      />
    </div>
    <div class="mb-3">
      <label for="phone" class="form-label">店面電話</label>
      <input
        type="phone"
        class="form-control"
        name="phone"
        value="{{rest.phone}}"
        minlength="1"
        maxlength="10"
        required
      />
    </div>
    <div class="mb-3">
      <label for="google_map" class="form-label">googlemap網址</label>
      <input
        type="text"
        class="form-control"
        name="google_map"
        value="{{rest.google_map}}"
        minlength="3"
        required
      />
    </div>
    <div class="mb-3">
      <label for="rating" class="form-label">評價</label>
      <input
        type="number"
        class="form-control"
        name="rating"
        value="{{rest.rating}}"
        min="0"
        max="5.0"
        step="0.1"
        required
      />
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">介紹</label>
      <textarea
        class="form-control"
        name="description"
      >{{rest.description}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>